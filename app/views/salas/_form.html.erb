<h4 class="text-lg font-semibold text-white text-center"><%= title %></h4>
<div data-controller="form" class="mt-4">
  <%= form_with(model: sala, class: 'flex flex-col gap-4', data: { controller: 'form', action: 'submit->form#resetComponent' }) do |form| %>
    <% if sala.errors.any? %>
      <div class="bg-red-500/20 border border-red-500/40 rounded-xl p-3 text-sm text-red-100">
        <h2 class="font-bold mb-2">Não foi possível salvar:</h2>
        <ul class="space-y-1">
          <% sala.errors.each do |error| %>
            <li>- <%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="flex flex-col-2 gap-2 justify-center">
      <%= form.label :nome, class: 'text-sm text-slate-200 font-semibold mt-3' %>
      <%= form.text_field :nome, class: 'rounded-2xl bg-slate-800/80 border border-white/10 text-sm text-center text-white px-4 py-3 focus:border-sky-400 focus:outline-none' %>
    </div>

    <div class="flex gap-2 justify-center">
      <%= form.submit 'Salvar', class: 'px-4 py-2 text-sm text-slate-900 font-semibold rounded-xl bg-gradient-to-r from-sky-500 to-emerald-500 shadow-lg shadow-sky-500/30 cursor-pointer' %>
      <%= link_to 'Cancelar', salas_path, class: 'px-4 py-2 text-sm text-white font-semibold rounded-xl border border-white/10 hover:border-sky-400 text-center' %>
    </div>
  <% end %>
</div>
