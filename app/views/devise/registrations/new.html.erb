<main class="min-h-screen bg-gradient-to-br from-slate-950 via-slate-900 to-slate-950 flex flex-col justify-center items-center px-6 py-10">
  <section class="flex flex-col items-center gap-2 mb-8 text-center">
    <%= image_tag('chat.png', width: 80, class: "drop-shadow-lg") %>
    <h1 class="font-bold text-3xl text-white">Chat App - Ruby on Rails 7</h1>
    <p class="text-sm text-slate-300 max-w-xl">Cadastre-se para criar e entrar nas salas em tempo real.</p>
  </section>

  <section class="max-w-md rounded-3xl bg-slate-900/70 border border-white/5 shadow-2xl shadow-slate-900/50 p-6 space-y-4">
    <h2 class="text-white font-bold text-2xl text-center">Criar conta</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), class: 'flex flex-col gap-4') do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="flex flex-col gap-2">
        <%= f.label :email, class: 'text-slate-200 font-semibold text-sm' %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class:'w-full rounded-2xl bg-slate-800/80 border border-white/10 text-sm text-white placeholder:text-slate-400 px-4 py-3 focus:border-sky-400 focus:outline-none shadow-inner shadow-slate-900/50' %>
      </div>

      <div class="flex flex-col gap-2">
        <%= f.label :password, class: 'text-slate-200 font-semibold text-sm' %>
        <%= f.password_field :password, autocomplete: "new-password", class:'w-full rounded-2xl bg-slate-800/80 border border-white/10 text-sm text-white placeholder:text-slate-400 px-4 py-3 focus:border-sky-400 focus:outline-none shadow-inner shadow-slate-900/50' %>
        <% if @minimum_password_length %>
          <em class="text-xs font-medium text-slate-400">(<%= @minimum_password_length %> caracteres no mÃ­nimo)</em>
        <% end %>
      </div>

      <div class="flex flex-col gap-2">
        <%= f.label :password_confirmation, class: 'text-slate-200 font-semibold text-sm' %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class:'w-full rounded-2xl bg-slate-800/80 border border-white/10 text-sm text-white placeholder:text-slate-400 px-4 py-3 focus:border-sky-400 focus:outline-none shadow-inner shadow-slate-900/50' %>
      </div>

      <div class="pt-2">
        <%= f.submit "Criar conta", class: 'w-full inline-flex items-center justify-center gap-2 rounded-2xl bg-gradient-to-r from-sky-500 to-emerald-500 text-slate-900 font-semibold text-sm px-4 py-3 shadow-lg shadow-sky-500/30 hover:shadow-emerald-500/30 cursor-pointer' %>
      </div>
    <% end %>
    <div class="text-center">
      <%= render "devise/shared/links" %>
    </div>
  </section>
</main>
